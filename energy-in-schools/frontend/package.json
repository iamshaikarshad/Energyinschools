{
  "name": "samsung_school_frontend",
  "version": "0.0.1",
  "description": "Frontend for Samsung School platform",
  "engines": {
    "npm": ">=3"
  },
  "scripts": {
    "preinstall": "node tools/nodeVersionCheck.js",
    "start-message": "babel-node tools/startMessage.js",
    "prestart": "npm run start-message",
    "start": "concurrently -k -r -s first \"npm run open:src\" \"npm run lint:watch\"",
    "open:src": "babel-node tools/srcServer.js",
    "open:dist": "babel-node tools/distServer.js",
    "lint": "esw  --ext .jsx --ext .js webpack.config.* src tools --color",
    "lint:watch": "npm run lint -- --watch",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "remove-dist": "rimraf ./dist",
    "precommit": "npm run lint",
    "prebuild": "npm run clean-dist",
    "build-and-open": "babel-node tools/build.js && npm run open:dist",
    "build": "babel-node tools/build.js",
    "test": "jest",
    "test:CI": "babel-node tools/testCi.js",
    "test:cover": "npm run test -- --coverage",
    "test:cover:CI": "npm run test:CI -- --coverage && cat ./coverage/lcov.info | node_modules/coveralls/bin/coveralls.js",
    "test:watch": "jest --watch",
    "open:cover": "npm run test:cover && opn ./coverage/lcov-report/index.html",
    "analyze-bundle": "babel-node ./tools/analyzeBundle.js"
  },
  "author": "GlobalLogic",
  "license": "Custom",
  "dependencies": {
    "@date-io/moment": "^1.3.8",
    "@devexpress/dx-chart-core": "^2.7.5",
    "@devexpress/dx-react-chart": "^2.7.5",
    "@devexpress/dx-react-chart-material-ui": "^2.7.5",
    "@devexpress/dx-react-core": "^2.7.5",
    "@material-ui/core": "^4.2.0",
    "@material-ui/icons": "^4.2.0",
    "@material-ui/pickers": "^3.2.0",
    "@material-ui/styles": "^4.11.5",
    "axios": "^0.18.0",
    "canvg": "^3.0.6",
    "connected-react-router": "6.5.2",
    "d3-shape": "^2.1.0",
    "file-saver": "^1.3.8",
    "html-webpack-inline-source-plugin": "0.0.10",
    "immutability-helper": "^2.7.1",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.4",
    "markdown-it": "^8.4.2",
    "material-table": "^1.51.0",
    "modernizr": "^3.6.0",
    "modernizr-webpack-plugin": "^1.0.7",
    "moment": "^2.22.2",
    "nuka-carousel": "^4.4.7",
    "object-assign": "4.1.0",
    "papaparse": "^5.3.1",
    "pluralize": "^7.0.0",
    "query-string": "^5.1.1",
    "rc-slider": "^8.6.3",
    "re-resizable": "^6.9.9",
    "react": "16.10.2",
    "react-custom-scrollbars": "^4.2.1",
    "react-d3-speedometer": "^0.5.5",
    "react-dom": "16.10.2",
    "react-dropzone": "11.2.0",
    "react-form-validator-core": "0.6.4",
    "react-ga": "^2.7.0",
    "react-material-ui-form-validator": "2.0.9",
    "react-paginate": "^5.2.4",
    "react-player": "^1.6.4",
    "react-redux": "7.1.0",
    "react-rnd": "^9.0.2",
    "react-router": "5.0.1",
    "react-router-dom": "5.0.1",
    "react-scroll": "^1.7.10",
    "react-search-input": "^0.11.3",
    "react-select": "^2.1.1",
    "react-slick-improved": "^0.23.3",
    "react-stack-grid": "^0.7.1",
    "react-svg": "^6.0.3",
    "react-text-truncate": "^0.14.1",
    "recharts": "^1.4.1",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "shortid": "^2.2.8",
    "whatwg-fetch": "^3.0.0",
    "yaml": "^1.3.2"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.6",
    "@babel/node": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-constant-elements": "7.0.0",
    "@babel/polyfill": "7.0.0",
    "@babel/preset-env": "7.1.6",
    "@babel/preset-react": "7.0.0",
    "autoprefixer": "7.1.4",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "babel-plugin-transform-react-remove-prop-types": "0.4.20",
    "browser-sync": "2.26.3",
    "chalk": "2.0.1",
    "concurrently": "3.5.0",
    "connect-history-api-fallback": "1.3.0",
    "css-loader": "1.0.1",
    "cssnano": "^4.1.7",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "eslint-watch": "3.1.2",
    "file-loader": "1.1.11",
    "hard-source-webpack-plugin": "^0.13.1",
    "history": "4.7.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "json-loader": "0.5.4",
    "mini-css-extract-plugin": "^0.6.0",
    "node": "8.9.4",
    "node-sass": "4.5.3",
    "opn-cli": "3.1.0",
    "postcss-loader": "3.0.0",
    "prompt": "1.0.0",
    "prop-types": "15.6.2",
    "raf": "3.3.2",
    "react-hot-loader": "4.12.7",
    "redux-immutable-state-invariant": "2.0.0",
    "replace": "0.3.0",
    "rimraf": "2.6.1",
    "sass-loader": "6.0.6",
    "style-loader": "0.21.0",
    "url-loader": "1.0.1",
    "webpack": "4.35.3",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-dev-middleware": "3.4.0",
    "webpack-hot-middleware": "2.24.3",
    "webpack-md5-hash": "0.0.6"
  },
  "resolutions": {
    "file-selector": "0.1.12"
  },
  "repository": {
    "type": "git",
    "url": "https://portal-ua.globallogic.com/gitlab/pavlo.halan/samsung-school"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "@babel/preset-env",
          "@babel/preset-react"
        ],
        "plugins": [
          "@babel/plugin-proposal-class-properties",
          "react-hot-loader/babel",
          "@babel/plugin-syntax-dynamic-import"
        ]
      },
      "production": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "ie": 9
              },
              "forceAllTransforms": true
            }
          ],
          "@babel/preset-react"
        ],
        "plugins": [
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-transform-react-constant-elements",
          "transform-react-remove-prop-types",
          "@babel/plugin-syntax-dynamic-import"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:react/recommended",
      "airbnb"
    ],
    "plugins": [
      "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "react/forbid-prop-types": 0,
      "react/jsx-filename-extension": 0,
      "max-len": 0,
      "import/no-extraneous-dependencies": 0,
      "prefer-destructuring": 0,
      "jsx-a11y/aria-proptypes": 0,
      "jsx-a11y/anchor-is-valid": 0,
      "react/jsx-one-expression-per-line": 0,
      "import/no-cycle": 0,
      "one-var": 0,
      "no-mixed-operators": 0,
      "linebreak-style": 0
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true,
      "jest": true
    },
    "globals": {
      "window": true,
      "document": true
    }
  },
  "jest": {
    "browser": true,
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/jestTests/transform.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(lodash-es)/)"
    ],
    "displayName": {
      "name": "CLIENT",
      "color": "blue"
    }
  }
}
